<section class="features-section">
  <div class="container-wrapper">
    <div class="content-container">
      <h2 class="feature-section-title">{{ section.settings.heading }}</h2>
    </div>

    <div class="features-grid">
      {% for block in section.blocks %}
        <div class="feature-card">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.title }}">
          {% endif %}
          <div class="feature-info">
            <h3>{{ block.settings.title }}</h3>
            <p class="description">{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  <style>
    *{
      margin:0;
      padding:0;
     }
    .features-section {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 90px 0px;
      background: radial-gradient(
        ellipse at center 55%,
        #db2777 -80%,
        #fff3f8 55%,
        #ffffff 70%
      );
    }
    .container-wrapper {
      width: 1280px;
      display: flex;
      gap: 50px;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    .content-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    .feature-section-title {
      font-size: 48px;
      line-height: 48px;
      font-family: Inter, sans-serif;
      font-weight: 600;
      color: #0e0f11;
      text-align: center;
      margin-bottom:0px;

    }
    .features-grid {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
    }
    .feature-card {
      flex: 1 1 250px;
      position: relative;
      width: 100%;
      max-width: 302px;
      height: 400px;
      border-radius: 8px;
      overflow: hidden;
      padding: 0.8px;
      box-shadow: 0px 4px 30px 0px rgba(0, 0, 0, 0.3);
    }
    .feature-card img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }
    .feature-card::before {
      content: "";
      position: absolute;
      inset: 0;
      z-index: 1;
      background: linear-gradient(
        to top,
        rgba(0, 0, 0, 1) 0%,
        rgba(0, 0, 0, 0.8) 50%,
        rgba(0, 0, 0, 0.4) 100%
      );
    }
    .feature-info {
      position: absolute;
      bottom: 8%;
      left: 10%;
      padding-right: 10%;
      color: #fff;
      text-align: left;
      display: flex;
      flex-direction: column;
      gap: 13.6px;
      z-index: 2;
    }
    .feature-info h3 {
      font-size: 18px;
      line-height: 25px;
      font-weight: 600;
      font-family: Inter, sans-serif;
      color: #ffffff;
    }
    .feature-info .description {
      color: #e9e9e9;
      font-size: 12px;
      line-height: 16px;
      font-family: Inter, sans-serif;
      letter-spacing: 0.6px;
      text-transform: capitalize;
    }
    @media (max-width: 1024px) {
      .features-section { padding: 50px 15px; }
      .feature-card{
        max-width:100%;
      }
      .container-wrapper { gap: 40px; }
      .features-grid { grid-template-columns: repeat(2, 49%); gap: 20px; }
    }
    @media (max-width: 768px) {
      .features-section { padding: 40px 10px; }
      .feature-section-title { font-size: 32px; line-height: 36px; }
      .container-wrapper { gap: 30px; }
      .features-grid { grid-template-columns: repeat(2, 49%); gap: 10px; }
      .feature-card { height: 250px; }
      .feature-info { bottom: 15px; left: 15px; gap: 10px; padding-right: 10px; }
      .feature-info h3 { font-size: 16px; line-height: 20px; }
    }
  </style>

  {% schema %}
  {
    "name": "Features Section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Section Heading",
        "default": "Explore the Features"
      }
    ],
    "blocks": [
      {
        "type": "feature",
        "name": "Feature Card",
        "settings": [
          { "type": "image_picker", "id": "image", "label": "Feature Image" },
          { "type": "text", "id": "title", "label": "Feature Title", "default": "Feature Title Here" },
          { "type": "textarea", "id": "description", "label": "Feature Description", "default": "Feature description goes here." }
        ]
      }
    ],
    "presets": [
      {
        "name": "Features Section",
        "category": "Custom Sections",
        "blocks": [
          {
            "type": "feature",
            "settings": {
              "title": "Dual-Mode Intelligent Light Therapy",
              "description": "Utilizes red and near-infrared light to promote healing and reduce discomfort."
            }
          },
          {
            "type": "feature",
            "settings": {
              "title": "Precision Diffusion Technology",
              "description": "Incorporates frequency stabilization and micro-diffusion for targeted light delivery."
            }
          },
          {
            "type": "feature",
            "settings": {
              "title": "Flexible, Wearable Design",
              "description": "Features a flush-fit silicone construction that conforms to various body parts."
            }
          },
          {
            "type": "feature",
            "settings": {
              "title": "Versatile Power Options",
              "description": "Supports wall adapter, car adapter, and cordless power pack for on-the-go relief."
            }
          }
        ]
      }
    ]
  }
  {% endschema %}
</section>
