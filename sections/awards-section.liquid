<section 
  class="awards-section"
  style="
    background:
      {% if section.settings.enable_gradient %}
        radial-gradient(
          ellipse at center 65%, 
          {{ section.settings.gradient_color }} -80%, 
          {{ section.settings.section_bg_color }} 55%, 
          #ffffff 70%
        );
      {% else %}
        {{ section.settings.section_bg_color }};
      {% endif %}
    border: 1px solid {{ section.settings.border_color }};
    border-radius: {{ section.settings.border_radius }}px;
  "
>
  <div class="container-wrapper">
    <div class="content-container">
      <h2 
        class="section-title"
        style="
          color: {{ section.settings.heading_color }};
          background: {{ section.settings.heading_bg_color }};
          font-family: {{ section.settings.heading_font_family }};
          font-weight: {{ section.settings.heading_font_weight }};
          font-size: {{ section.settings.heading_font_size }}px;
          line-height: {{ section.settings.heading_line_height }}px;
          letter-spacing: {{ section.settings.heading_letter_spacing }}px;
          font-style: {{ section.settings.heading_font_style }};
          text-decoration: {{ section.settings.heading_text_decoration }};
          text-shadow: {{ section.settings.heading_text_shadow }};
        "
      >
        {{ section.settings.heading }}
      </h2>

      <p 
        class="section-subtitle"
        style="
          color: {{ section.settings.subheading_color }};
          background: {{ section.settings.subheading_bg_color }};
          font-family: {{ section.settings.subheading_font_family }};
          font-weight: {{ section.settings.subheading_font_weight }};
          font-size: {{ section.settings.subheading_font_size }}px;
          line-height: {{ section.settings.subheading_line_height }}px;
          letter-spacing: {{ section.settings.subheading_letter_spacing }}px;
          font-style: {{ section.settings.subheading_font_style }};
          text-decoration: {{ section.settings.subheading_text_decoration }};
          text-shadow: {{ section.settings.subheading_text_shadow }};
        "
      >
        {{ section.settings.subheading }}
      </p>
    </div>

    <div class="awards-grid">
      {% for block in section.blocks %}
        <div class="award-card">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.title }}">
          {% endif %}
          <div class="award-info">
            <h3>{{ block.settings.title }}</h3>
            <p class="tag">{{ block.settings.tag }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  <style>
    .awards-section {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 90px 0px;
    }
    .container-wrapper {
      width: 1280px;
      display: flex;
      gap: 50px;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    .content-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    .awards-grid {
      width: 100%;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 24px;
      justify-items: center;
    }
    .award-card {
      position: relative;
      width: 100%;
      max-width: 302px;
      height: 400px;
      border-radius: 8px;
      overflow: hidden;
      padding: 0.8px;
      box-shadow: 0px 4px 30px 0px rgba(0, 0, 0, 0.3);
    }
    .award-card img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }
    .award-card::before {
      content: "";
      position: absolute;
      inset: 0;
      z-index: 1;
      background: linear-gradient(
        to top,
        rgba(0, 0, 0, 1) 0%,
        rgba(0, 0, 0, 0.8) 50%,
        rgba(0, 0, 0, 0.4) 100%
      );
    }
    .award-info {
      position: absolute;
      bottom: 8%;
      left: 10%;
      color: #fff;
      display: flex;
      flex-direction: column;
      gap: 13.6px;
      z-index: 2;
    }
    .award-info h3 {
      font-size: 18px;
      line-height: 25px;
      font-weight: 600;
      font-family: Inter, sans-serif;
    }
    .award-info .tag {
      color: #e31c79;
      font-size: 12px;
      line-height: 16px;
      font-family: Inter, sans-serif;
      text-transform: uppercase;
      letter-spacing: 0.6px;
    }
  </style>

  {% schema %}
  {
    "name": "Awards Section",
    "settings": [
      {
        "type": "color",
        "id": "section_bg_color",
        "label": "Section Background Color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "gradient_color",
        "label": "Radial Gradient Color",
        "default": "#db2777"
      },
      {
        "type": "checkbox",
        "id": "enable_gradient",
        "label": "Enable Radial Gradient Background",
        "default": true
      },
      {
        "type": "color",
        "id": "border_color",
        "label": "Section Border Color",
        "default": "#cccccc"
      },
      {
        "type": "range",
        "id": "border_radius",
        "label": "Section Border Radius (px)",
        "default": 0,
        "min": 0,
        "max": 50,
        "step": 1
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Section Heading",
        "default": "Awards Speak About Us More Than Us"
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Heading Text Color",
        "default": "#0e0f11"
      },
      {
        "type": "color",
        "id": "heading_bg_color",
        "label": "Heading Background Color",
        "default": "transparent"
      },
      {
        "type": "select",
        "id": "heading_font_family",
        "label": "Heading Font Family",
        "default": "Inter",
        "options": [
          { "value": "Inter", "label": "Inter" },
          { "value": "Poppins", "label": "Poppins" },
          { "value": "Roboto", "label": "Roboto" },
          { "value": "Montserrat", "label": "Montserrat" }
        ]
      },
      {
        "type": "range",
        "id": "heading_font_size",
        "label": "Heading Font Size (px)",
        "default": 48,
        "min": 10,
        "max": 100,
        "step": 1
      },
      {
        "type": "range",
        "id": "heading_line_height",
        "label": "Heading Line Height (px)",
        "default": 48,
        "min": 10,
        "max": 120,
        "step": 1
      },
      {
        "type": "range",
        "id": "heading_letter_spacing",
        "label": "Heading Letter Spacing (px)",
        "default": 0,
        "min": -5,
        "max": 10,
        "step": 0.1
      },
      {
        "type": "select",
        "id": "heading_font_weight",
        "label": "Heading Font Weight",
        "default": "600",
        "options": [
          { "value": "400", "label": "Normal" },
          { "value": "500", "label": "Medium" },
          { "value": "600", "label": "Semi Bold" },
          { "value": "700", "label": "Bold" }
        ]
      },
      {
        "type": "select",
        "id": "heading_font_style",
        "label": "Heading Font Style",
        "default": "normal",
        "options": [
          { "value": "normal", "label": "Normal" },
          { "value": "italic", "label": "Italic" }
        ]
      },
      {
        "type": "select",
        "id": "heading_text_decoration",
        "label": "Heading Text Decoration",
        "default": "none",
        "options": [
          { "value": "none", "label": "None" },
          { "value": "underline", "label": "Underline" },
          { "value": "overline", "label": "Overline" },
          { "value": "line-through", "label": "Line Through" }
        ]
      },
      {
        "type": "text",
        "id": "heading_text_shadow",
        "label": "Heading Text Shadow (e.g. 2px 2px 4px #000000)",
        "default": ""
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Section Subheading",
        "default": "Recognized by the leaders, for the leaders."
      },
      {
        "type": "color",
        "id": "subheading_color",
        "label": "Subheading Text Color",
        "default": "#0a0a0a"
      },
      {
        "type": "color",
        "id": "subheading_bg_color",
        "label": "Subheading Background Color",
        "default": "transparent"
      },
      {
        "type": "select",
        "id": "subheading_font_family",
        "label": "Subheading Font Family",
        "default": "Geist",
        "options": [
          { "value": "Inter", "label": "Inter" },
          { "value": "Poppins", "label": "Poppins" },
          { "value": "Roboto", "label": "Roboto" },
          { "value": "Montserrat", "label": "Montserrat" },
          { "value": "Geist", "label": "Geist" }
        ]
      },
      {
        "type": "range",
        "id": "subheading_font_size",
        "label": "Subheading Font Size (px)",
        "default": 20,
        "min": 10,
        "max": 60,
        "step": 1
      },
      {
        "type": "range",
        "id": "subheading_line_height",
        "label": "Subheading Line Height (px)",
        "default": 28,
        "min": 10,
        "max": 100,
        "step": 1
      },
      {
        "type": "range",
        "id": "subheading_letter_spacing",
        "label": "Subheading Letter Spacing (px)",
        "default": 0,
        "min": -5,
        "max": 10,
        "step": 0.1
      },
      {
        "type": "select",
        "id": "subheading_font_weight",
        "label": "Subheading Font Weight",
        "default": "400",
        "options": [
          { "value": "400", "label": "Normal" },
          { "value": "500", "label": "Medium" },
          { "value": "600", "label": "Semi Bold" },
          { "value": "700", "label": "Bold" }
        ]
      },
      {
        "type": "select",
        "id": "subheading_font_style",
        "label": "Subheading Font Style",
        "default": "normal",
        "options": [
          { "value": "normal", "label": "Normal" },
          { "value": "italic", "label": "Italic" }
        ]
      },
      {
        "type": "select",
        "id": "subheading_text_decoration",
        "label": "Subheading Text Decoration",
        "default": "none",
        "options": [
          { "value": "none", "label": "None" },
          { "value": "underline", "label": "Underline" },
          { "value": "overline", "label": "Overline" },
          { "value": "line-through", "label": "Line Through" }
        ]
      },
      {
        "type": "text",
        "id": "subheading_text_shadow",
        "label": "Subheading Text Shadow (e.g. 2px 2px 4px #000000)",
        "default": ""
      }
    ],
    "blocks": [
      {
        "type": "award",
        "name": "Award Card",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Award Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Award Title",
            "default": "Award Title Here"
          },
          {
            "type": "text",
            "id": "tag",
            "label": "Award Tag",
            "default": "Award Winner"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Awards Section",
        "category": "Custom Sections"
      }
    ]
  }
  {% endschema %}
</section>
