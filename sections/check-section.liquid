<section class="check-section">
  <div class="container">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.paragraph }}</p>
    <a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_text }}</a>
  </div>

  <style>
    .check-section {
      width: 100%;
      padding: 80px 0;
      background-color: #f9f9f9;
      text-align: center;
    }

    .check-section h2 {
      font-size: 32px;
      color: #111;
      margin-bottom: 10px;
    }

    .check-section p {
      font-size: 18px;
      color: #555;
      margin-bottom: 20px;
    }

    .check-section .btn {
      display: inline-block;
      background-color: #ec0d87;
      color: #fff;
      padding: 10px 25px;
      border-radius: 5px;
      text-decoration: none;
      transition: 0.3s;
    }

    .check-section .btn:hover {
      background-color: #c50a6d;
    }
  </style>

  {% schema %}
  {
    "name": "Check Section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "This is a Check Section"
      },
      {
        "type": "text",
        "id": "paragraph",
        "label": "Paragraph",
        "default": "If you can see this, the section is working fine!"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Click Here"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link",
        "default": "#"
      }
    ],
    "presets": [
      {
        "name": "Check Section",
        "category": "Custom Sections"
      }
    ]
  }
  {% endschema %}
</section>
